---
import Layout from "../layouts/Layout.astro";
import Card from "../components/freshers-guide/Card.astro";
---

<Layout title={"Fresher's guide"}>
  <div class="p-8 md:p-12">
    <div class="">
      <div class="bg-r h-[6px] w-full self-center mb-6">
        <div class="bg-p h-[6px] w-16 ml-16"></div>
      </div>
    </div>
    <h1 class="font-bold text-center text-5xl md:text-7xl md:text-left">
      Student's Guide
    </h1>
  </div>
  <div class="md:px-[4rem] lg:px-[8rem]">
    <div class="pb-8 px-8">
      <h2
        class="font-bold text-center text-4xl py-4 sm:text-5xl lg:text-6xl lg:pb-3 md:text-left text-p"
      >
        Important Links
      </h2>
      <ul class="font-semibold px-6 sm:text-3xl lg:text-4xl md:mt-5">
        <li class="py-1 md:py-2">
          <a
            href="https://iith.ac.in/about/aboutiith/#reach"
            class="hover:text-r"
            target="_blank"
            rel="noopener noreferrer">How to reach IIT Hyderabad</a
          >
        </li>
        <li class="py-1 md:py-2">
          <a
            href="https://support.comp.iith.ac.in/kb/faq.php?id=21"
            class="hover:text-r"
            target="_blank"
            rel="noopener noreferrer">IITH VPN Guide</a
          >
        </li>
        <li class="py-1 md:py-2">
          <a
            href="https://htos.iith.ac.in"
            class="hover:text-r"
            target="_blank"
            rel="noopener noreferrer">HTOS</a
          >
        </li>
        <li class="py-1 md:py-2">
          <a
            href="https://sva.iith.ac.in/"
            class="hover:text-r"
            target="_blank"
            rel="noopener noreferrer">SVA Portal(For Mess Registration)</a
          >
        </li>
        <li class="py-1 md:py-2">
          <a
            href="https://cins.iith.ac.in/"
            class="hover:text-r"
            target="_blank"
            rel="noopener noreferrer">IITH Map</a
          >
        </li>
      </ul>
    </div>
    <div class="pb-8 px-8">
      <h2
        class="font-bold text-center text-4xl py-4 sm:text-5xl lg:text-6xl lg:pb-3 md:text-left text-p"
      >
        Constitutions & Documents
      </h2>
      <div
        class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 md:mt-8"
      >
        <Card
          title={"Gymkhana Constitution"}
          link={"/documents/gymkhana constituion.pdf"}
          img={"https://res.cloudinary.com/dwsverefw/image/upload/v1672969573/media%20council/docs/iith_syornf.png"}
          alt={"Gymkhana IITH Logo"}
        />
        <Card
          title={"Elan Fest Docs (For Students)"}
          link={"/documents/Elan & Î·Vision 2023 Documentation.pdf"}
          img={"https://res.cloudinary.com/dwsverefw/image/upload/v1672969573/media%20council/docs/elan_lkitmb.png"}
          alt={"IITH logo"}
        />
        <Card
          title={"E-Cell Prospectus"}
          link={"/documents/E-Cell IITH Prospectus.pdf"}
          img={"https://res.cloudinary.com/dwsverefw/image/upload/v1672969573/media%20council/docs/ecell_jcjlth.png"}
          alt="E-Cell IITH logo"
        />
        <Card
          title={"Student's Handbook"}
          link={"/documents/Academic Handbook 2022 (50th senate).pdf"}
          img={"https://res.cloudinary.com/dwsverefw/image/upload/v1672969573/media%20council/docs/iith_syornf.png"}
          alt="IITH logo"
        />
        <Card
          title={"Acad FAQ Docs 2021"}
          link={"/documents/Acad-FAQ-PhD-17-05-2021.pdf"}
          img="https://res.cloudinary.com/dwsverefw/image/upload/v1672969573/media%20council/docs/iith_syornf.png"
          alt="IITH logo"
        />
        <!-- <Card title={'UG Course Booklet'} link={'/documents/Acad-FAQ-PhD-17-05-2021.pdf'}/>
            <Card title={'PG Course Booklet'} link={'/documents/Acad-FAQ-PhD-17-05-2021.pdf'}/> -->
      </div>
    </div>
    <div class="pb-8 px-8">
      <h2
        class="font-bold text-center text-4xl py-4 sm:text-5xl lg:text-6xl lg:pb-3 md:text-left text-p"
      >
        Recreational Room
      </h2>
      <ul class="font-semibold px-6 sm:text-3xl lg:text-4xl md:mt-5">
        <li class="py-1 md:py-2">
          <a
            href="https://gymkhana.iith.ac.in/recreation-slots"
            class="hover:text-r"
            target="_blank"
            rel="noopener noreferrer">Book A slot</a
          >
        </li>
      </ul>
    </div>
  </div>
</Layout>
