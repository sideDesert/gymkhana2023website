---
export interface Props {
  title: string;
  desc?: string;
  link: string;
  className?:string;
}
const dummy =
  "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.";
const { title, desc = dummy, link,className }: Props = Astro.props;
---

<div class={"bg-white p-5 rounded-2xl px-7 mt-7 lg:max-w-lg lg:justify-self-center "+ className}>
  <h2 class="font-bold text-2xl">{title}</h2>
  <p class="py-5 pt-3 h-[9.5rem] overflow-hidden text-ellipsis">{desc}</p>
  <a href={link}><button class="text-white bg-r px-4 py-2 rounded-lg font-semibold"
    >Read More</button
  ></a>
</div>

