---
const { link, title, img = imgDef, alt = "gymkhana" } = Astro.props;
var imgDef =
  "https://res.cloudinary.com/dwsverefw/image/upload/v1672969573/media%20council/docs/iith_syornf.png";
---

<a href={link} target="_blank" rel="noopenner noreferrer" class="">
  <div
    class="active:scale-95 hover:rounded-2xl transition- duration-[400ms] rounded-lg min-h-[15.25rem] h-full min-w-[14.25rem] bg-p text-white flex flex-col items-center p-6 relative"
  >
    <div class="flex-grow">
      <img src={img} alt={alt} class="object-cover" />
    </div>
    <div class=""><h3 class="text-2xl font-semibold">{title}</h3></div>
  </div>
</a>
