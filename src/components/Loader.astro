---
const {text='Loading...', title='IITH Student Gymmkhana'} = Astro.props
---

<div id='loader' class="h-[100vh] w-full fixed bg-p z-[70] flex justify-center items-center flex-col gap-5">
    <div class="text-3xl text-white font-semibold text-center"><h2>{title}</h2></div>
    <div class="progress">
      <div class="color"></div>
    </div>
    <div class="text-r text-xl"><h2>{text}</h2></div>
  </div>

<style>  
#loader{
    background : #190d57 ;
    background-size: 80%;
  }

  .progress{
    position: relative;
    height: 7px;
    width: 40%;
    border: 10px solid #ff3b43;
    border-radius: 15px;
}
.progress .color{
    position: absolute;
    background-color: #ffffff;
    width: 0px;
    height: 10px;
    border-radius: 15px;
    top: -5px;
    animation: progres 4s infinite linear;    
}
@keyframes progres{
    0%{
      width: 0%;
    }
    25%{
        width: 50%;
    }
    50%{
        width: 75%;
    }
    75%{
        width: 85%;
    }
    100%{
        width: 100%;
    }
};

</style>

<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.3/gsap.min.js"/>
<script defer>
    console.log(gsap)
    window.addEventListener('load',()=>{
    gsap.to('#loader', {autoAlpha: 0, duration: 0.5})
  })
</script>