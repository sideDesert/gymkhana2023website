---
export interface Props {
  title: string;
  blackOn?: boolean;
  gutter?: boolean;
  disableAnimation?: boolean;
  footerActive?: boolean;
}

const {
  title = "Gymkhana",
  blackOn = true,
  gutter = true,
  disableAnimation = true,
  footerActive = true,
}: Props = Astro.props;

import Navbar from "../components/Navbar";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;1,100;1,200;1,300&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.3/gsap.min.js"
    ></script>
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.3/ScrollTrigger.min.js"
    ></script>
  </head>
  <body class="">
    <Navbar blackOn={blackOn} disableAnimation={disableAnimation} client:load />
    {gutter && <div class="w-full  h-[5rem]" />}
    <slot />
    <style is:global>
      :root {
        --red: #ff3b43;
        --purple: #190d57;
        --green: #07cebb;
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          var(--red) 30%,
          var(--purple) 60%
        );
      }
      .inactive {
        background-color: var(--purple);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        color: white;
      }
      .active {
        background-color: white;
        color: black;
        padding: 0.5rem 1rem;
        border-radius: 8px;
      }

      html {
        font-family: "Poppins", system-ui, sans-serif;
        background-color: #fff;
      }
      body {
        overflow-x: hidden;
      }
      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }
      .menu-items > li:last-child {
        padding-bottom: 1rem;
      }
    </style>
  </body>
  {
    footerActive && (
      <footer class=" text-white w-full">
        <div class="grid grid-cols-1 md:grid-cols-5 p-6 lg: bg-[#0C062A]">
          <div class="grid md:col-span-2  md:grid-cols-2 gap-4">
            <div class="md:col-span-col-span-1">
              <h2 class="font-bold py-2">Quick Links</h2>
              <ul>
                <li class="py-1">
                  <a
                    href="https://iith.ac.in/"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    IIT Hyderabad
                  </a>
                </li>
                <li class="py-1">
                  <a
                    href="https://elan.org.in/"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    Elan & nVision
                  </a>
                </li>
                <li class="py-1">
                  <a
                    href="https://ecell.iith.ac.in/"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    Entrepreneurship Cell
                  </a>
                </li>
                <li class="py-1">
                  <a
                    href="https://nss.iith.ac.in/"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    National Service Scheme
                  </a>
                </li>
              </ul>
            </div>
            <div class="col-span-1">
              <ul>
                <li class="pointer-events-none py-2 hidden md:block">‎ </li>
                <li class="py-1">
                  <a
                    href="https://gymkhana.iith.ac.in/milan"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    Milan 2023
                  </a>
                </li>
                <li class="py-1">
                  <a
                    href="https://hostel.iith.ac.in/"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    IITH Hostels
                  </a>
                </li>
                <li class="py-1">
                  <a
                    href="https://ebsb.iith.ac.in/"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    EBSB
                  </a>
                </li>
                <li class="py-1">
                  <a
                    href="https://sunshine.iith.ac.in/index.php"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    Sunshine
                  </a>
                </li>
              </ul>
            </div>
          </div>

          <div class="md:col-span-2">
            <h2 class="font-bold py-2">Contact Us</h2>
            <address>
              Indian Institute of technology Hyderabad <br />
              Near NH-65, Sangareddy, kandi, Telangana 502285 <br />
              <div class="py-1">
                <span class="font-bold">Phone: </span>(+91) 6266875616
              </div>
              <div class="py-1">
                <span class="font-bold">Mail us at: </span>
                media_secy@gymkhana.iith.ac.in
              </div>
            </address>
          </div>

          <div class="md:col-span-1">
            <h2 class="font-bold py-2">Our Handles</h2>
            <div class="py-1">
              <a
                href="https://www.instagram.com/iit_hyderabad/?hl=en"
                target="_blank"
                rel="noopener noreferrer"
              >
                <span>Instagram</span>
              </a>
            </div>
            <div class="py-1">
              <a
                href="https://www.linkedin.com/company/students-gymkhana-iit-hyderabad/"
                target="_blank"
                rel="noopener noreferrer"
              >
                <span>Linkedin</span>
              </a>
            </div>
          </div>
        </div>

        <div class="bg-[#190D57] flex p-3 justify-center">
          Copyrights ⓒ 2023 Gymkhana IIT Hyderabad
        </div>
      </footer>
    )
  }
</html>
