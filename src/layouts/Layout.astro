---
export interface Props {
  title: string;
  blackOn?: boolean;
  gutter?: boolean;
  disableAnimation?: boolean
}

const { title='Gymkhana', blackOn=true,gutter=true, disableAnimation=true } : Props = Astro.props;

import Navbar from "../components/Navbar";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;1,100;1,200;1,300&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.3/gsap.min.js"/>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.3/ScrollTrigger.min.js"></script>
  </head>
  <body class=" h-[100vh]">
    <Navbar blackOn={blackOn} disableAnimation={disableAnimation} client:load />
    {gutter && <div class="w-full  h-[5rem]"></div>}
    <slot />
    <style is:global>
      :root {
        --red: #ff3b43;
        --purple: #190d57;
        --green: #07cebb;
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          var(--red) 30%,
          var(--purple) 60%
        );
      }
      .inactive{
        background-color: var(--purple);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        color: white
      }
      .active{
        background-color: white;
        color: black;
        padding: 0.5rem 1rem;
        border-radius: 8px;
    }
    
      html {
        font-family: "Poppins", system-ui, sans-serif;
        background-color: #f6f6f6;
      }
      body{
        overflow-x: hidden;
      }
      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }
      .menu-items > li:last-child {
        padding-bottom: 1rem;
      }
    </style>
  </body>
  <footer class=" text-white w-full">
    <div class="grid grid-cols-1 md:grid-cols-5 p-6 gap-4 bg-[#0C062A]">
      <div class="grid md:col-span-2  md:grid-cols-2 gap-4">
        <div class="md:col-span-1 col-span-1">
          <h2 class="font-bold">Quick Links</h2>
          <ul>
            <li><a href="https://iith.ac.in/">IIT Hyderabad</a></li>
            <li><a href="https://elan.org.in/">Elan & nVision</a></li>
            <li><a href="https://ecell.iith.ac.in/">Entrepreneurship Cell</a></li>
            <li><a href="https://nss.iith.ac.in/">National Service Scheme</a></li>
          </ul>
        </div>
        <div class="col-span-1">
          <ul>
            <li class="pointer-events-none hidden md:block">‎ </li>
            <li><a href="https://gymkhana.iith.ac.in/milan">Milan 2023</a></li>
            <li><a href="https://hostel.iith.ac.in/">IITH Hostels</a></li>
            <li><a href="https://sva.iith.ac.in/">SVA Portal</a></li>
            <li><a href="https://ocs.iith.ac.in/">Office of Career Counselling</a></li>
          </ul>
        </div>
      </div>


      <div class="md:col-span-2">
        <h2 class="font-bold">Contact Us</h2>
        <address>
          Indian Institute of technology Hyderabad <br>
        Near NH-65, Sangareddy, kandi, Telangana 502285 <br>
        <div><span class="font-bold">Phone: </span>(+91) 6266875616</div>
        <div><span class="font-bold">Mail us at: </span>media_secy@gymkhana.iith.ac.in</div>

        </address>
      </div>

      

      <div class="md:col-span-1">
        <h2 class="font-bold">Our Handles</h2>
      </div>
    </div>

    <div class="bg-[#190D57] flex p-3 justify-center">
      Copyrights ⓒ 2023 Gymkhana IIT Hyderabad
    </div>
  </footer>
</html>
